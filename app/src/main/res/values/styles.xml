<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="popup_window_anim">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>
    <style name="TextInputAppTheme" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/text_third_title_color</item>
    </style>
    <style name="EditTextStyle"
        parent="@android:style/Widget.EditText">
        <item name="android:importantForAutofill" tools:targetApi="o">noExcludeDescendants</item>
    </style>
</resources>
