<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_lin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_35">

    <ImageView
        android:id="@+id/check_music"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_17"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/check_bg"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:src="@drawable/normal_user"
        android:layout_toRightOf="@id/check_music"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_toRightOf="@id/user_img"
        android:hint="1"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_9" />

    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_40"
        android:textColor="@color/black"
        android:hint="1"
        android:textSize="@dimen/dp_9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#0B000000" />
</RelativeLayout>