<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/window_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="修改用户信息"
        android:layout_marginStart="@dimen/dp_20"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_weight="1"
        android:textColorHint="#60000000"
        app:hintTextAppearance="@style/TextInputAppTheme">

        <EditText
            android:id="@+id/user_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:hint="用户名:"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/dp_11" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_weight="1"
        android:textColorHint="#60000000"
        app:hintTextAppearance="@style/TextInputAppTheme">

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:hint="密码:"
            android:textColor="#000000"
            android:layout_marginStart="@dimen/dp_20"
            android:textColorHint="#000000"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/dp_11" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_25"
        android:orientation="horizontal"
        android:background="@drawable/button_bg_unsliod">
        <TextView
            android:id="@+id/super_change"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:text="管理员"
            android:background="@drawable/button_bg"
            android:textSize="@dimen/dp_9"
            android:gravity="center"/>
        <TextView
            android:id="@+id/normal_change"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_25"
            android:text="普通用户"
            android:textSize="@dimen/dp_9"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/delete_button"
            android:text="删除用户"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:padding="@dimen/dp_5"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/add_button"
            android:text="提交修改"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:padding="@dimen/dp_5"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>